{
  "name": "app",
  "private": "true",
  "type": "module",
  "browserslist": [
    ">0.1% and not dead",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Samsung versions",
    "Firefox ESR",
    "iOS >= 12.1",
    "Safari >= 12"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "standard | snazzy && stylelint 'app/**/*.scss'",
    "format": "standard --fix && stylelint 'app/**/*.scss' --fix",
    "ci": "bin/setup && bin/rails server",
    "dev": "vite dev"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "jsdom": "^25.0.0",
    "postcss": "^8.5.0",
    "sass": "^1.83.0",
    "snazzy": "^9.0.0",
    "standard": "^17.1.2",
    "stylelint": "^16.12.0",
    "stylelint-config-gds": "^2.0.0",
    "vite": "^5.4.11",
    "vite-plugin-ruby": "^5.1.1",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "dfe-autocomplete": "github:DFE-Digital/dfe-autocomplete#8e7389ff62a38bc8880323f6c58eed9c8d10f080",
    "govuk-frontend": "^5.7.1"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "beforeEach",
      "before",
      "after"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  }
}
