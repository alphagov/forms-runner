<% content_for :before_content do %>
  <% if @back_link %>
    <%= link_to "Back", @back_link, class: "govuk-back-link" %>
  <% end %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-l"><%= @page.question_text %></h1>
    <%= form_with model: @page, url: submit_form_page_path(@page.form_id, @page.id, :changing_existing_answer => @changing_existing_answer), method: :post do |form| %>
      <%= form.govuk_submit %>
    <% end %>
  </div>
</div>
