<% content_for :before_content do %>
  <% if @back_link %>
    <%= link_to "Back", @back_link, class: "govuk-back-link" %>
  <% end %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <h1 class="govuk-heading-l">Check your answers</h1>

    <%= govuk_summary_list(rows: @rows) %>

    <h2 class="govuk-heading-m">Now send your application</h2>

    <p class="govuk-body">By submitting this application you are confirming that, to the best of your knowledge, the details you are providing are correct.</p>

    <%= form_with url: form_submit_answers_path do |form| %>
      <%= form.govuk_submit 'Accept and send' %>
    <% end %>
  </div>
</div>
