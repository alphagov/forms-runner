<% set_page_title("#{t('forms.remove_file.show.title')} - #{form_title(form_name: @current_context.form.name, page_name: @step.question.question_text, mode: @mode, error: @step.question&.errors&.any?)}") %>

<% content_for :back_link do %>
  <% if @back_link.present? %>
    <%= link_to t("forms.back"), @back_link, class: "govuk-back-link" %>
  <% end %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render Question::FileRemoveComponent::View.new(question: @step.question, extra_question_text_suffix: hidden_text_mode(@mode).html_safe, remove_file_url: @remove_file_url, remove_input: @remove_input ) %>

    <%= render SupportDetailsComponent::View.new(@support_details) %>
  </div>
</div>
